set-option -g default-shell /usr/bin/fish

# Change the prefix from Ctrl-b to Ctrl-a
set -g prefix C-a
unbind C-b

# set the base index for windows and panes to 1 
set -g base-index 1
set -g pane-base-index 1

# enable mouse
set -g mouse on 

# set the status line's color 
set -g status-style fg=white,bg=blue

# set different background color for active window
set -g window-status-current-style bg=magenta











